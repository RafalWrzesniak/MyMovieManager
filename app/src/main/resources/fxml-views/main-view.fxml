                        <Tooltip text="%toolbar.settings" />
                     </tooltip>
                     <graphic>
                        <ImageView fitHeight="${ICON_SIZE}" fitWidth="${ICON_SIZE}" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../icons/settings.png" />
                        </ImageView>
