               </styleClass>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
               <contextMenu>
                  <ContextMenu fx:id="movieListViewContextMenu">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#renameContentList" text="%list_view.rename" />
