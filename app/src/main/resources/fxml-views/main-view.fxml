                  <StackPane prefHeight="${ICON_SIZE}" prefWidth="${ICON_SIZE}">
                        <ImageView fitHeight="${SMALL_ICON_SIZE}" fitWidth="${SMALL_ICON_SIZE}" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../icons/logo.png" />
                        </ImageView>
                  </StackPane>
            <padding>
               <Insets top="10.0" />
            </padding>
            </HBox>
         <padding>
            <Insets right="10.0" />
         </padding>
      </GridPane>
   </top>

   <left>
      <VBox>
