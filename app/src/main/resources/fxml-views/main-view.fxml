<BorderPane fx:id="main_view" prefHeight="770.0" prefWidth="1500.0" styleClass="background-color" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
