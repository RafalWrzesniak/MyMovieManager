                     </padding>
                  </Button>
                  <Button fx:id="addContentActors" layoutX="10.0" layoutY="3.0" mnemonicParsing="false" onAction="#addContentList" prefHeight="${ICON_SIZE}" prefWidth="${ICON_SIZE}">
