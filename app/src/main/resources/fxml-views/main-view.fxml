               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
               <graphic>
                  <Separator prefWidth="220.0">
                     <padding>
                        <Insets bottom="5.0" right="10.0" top="5.0" />
                     </padding>
                  </Separator>
               </graphic></Label>
            <ListView fx:id="movieListView" maxWidth="210.0" prefHeight="500.0">
               <styleClass>
                  <String fx:value="background-color" />
