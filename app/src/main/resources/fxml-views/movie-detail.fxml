<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" maxWidth="300.0" style="-fx-background-color: transparent;" vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.movie.MovieDetail">
   <VBox fx:id="vBox" alignment="TOP_CENTER" prefWidth="300.0" spacing="10.0" styleClass="background-color">
         <ImageView fx:id="contentImage" fitHeight="300.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
         <Label fx:id="title" style="-fx-font-weight: bold;" styleClass="blue_text" textAlignment="CENTER" wrapText="true">
            <tooltip>
               <Tooltip style="-fx-font-weight: normal;" text="%detail.title" />
            </tooltip>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Label>
         <Label fx:id="duration" styleClass="blue_text" >
            <tooltip>
               <Tooltip text="%detail.duration" />
            </tooltip>
         </Label>
         <Label fx:id="year" styleClass="blue_text" >
            <tooltip>
               <Tooltip text="%detail.premiere" />
            </tooltip>
         </Label>
         <Label fx:id="description" style="-fx-font-size: 14;" styleClass="white_text" textAlignment="JUSTIFY" wrapText="true">
            <tooltip>
               <Tooltip text="%detail.description" />
            </tooltip>
         </Label>
      </VBox>
   <stylesheets>
      <URL value="@../css-styles/basic.css" />
      <URL value="@../css-styles/text-and-textfield.css" />
   </stylesheets>
</ScrollPane>
