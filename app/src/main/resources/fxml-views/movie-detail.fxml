<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0" spacing="10.0" styleClass="background-color" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MovieDetail">
   <children>
      <ImageView fx:id="cover" fitHeight="500.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../savedData/Movie/movie4/Downton_Abbey.jpg" />
         </image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ImageView>
      <Label fx:id="title" style="-fx-font-weight: bold;" styleClass="blue_text" text="Title" textAlignment="CENTER" wrapText="true">
         <tooltip>
            <Tooltip text="%detail.title" style="-fx-font-weight: normal;"/>
         </tooltip>
      </Label>
      <Label fx:id="duration" styleClass="blue_text" text="Duration">
         <tooltip>
            <Tooltip text="%detail.duration" />
         </tooltip>
      </Label>
      <Label fx:id="year" styleClass="blue_text" text="Year">
         <tooltip>
            <Tooltip text="%detail.premiere" />
         </tooltip>
      </Label>
      <Label fx:id="director" styleClass="blue_text" text="Director" wrapText="true">
         <tooltip>
            <Tooltip text="%detail.director" />
         </tooltip>
      </Label>
      <Label fx:id="description" style="-fx-font-size: 14; -fx-text-fill: almost_white;" styleClass="blue_text" textAlignment="JUSTIFY" wrapText="true">
         <tooltip>
            <Tooltip text="%detail.description" />
         </tooltip>
      </Label>
   </children>
   <stylesheets>
      <URL value="@../css-styles/basic.css" />
      <URL value="@../css-styles/text.css" />
   </stylesheets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
